{
    "name": "Puppy Wallpaper - Cute Puppy Backgrounds",
    "version": "1.2",
    "description": "Choose a cute puppy image as your wallpaper for Google chrome!",
    "permissions": ["activeTab", "tabs", "bookmarks", "chrome://favicon/", "webRequest", "webRequestBlocking"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },
    "chrome_url_overrides": {
        "newtab": "redirect.html"
    }, 
    "browser_action": {
      "default_icon": {
        "16": "images/puppy16.png",
        "32": "images/puppy32.png",
        "48": "images/puppy48.png",
        "128": "images/puppy128.png"
      }
    },
    "icons": {
      "16": "images/puppy16.png",
      "32": "images/puppy32.png",
      "48": "images/puppy48.png",
      "128": "images/puppy128.png"
    },
    "manifest_version": 2
  }